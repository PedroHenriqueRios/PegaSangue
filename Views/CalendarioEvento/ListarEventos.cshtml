@model IEnumerable<iSangue.Models.CalendarioEvento>

@{
    ViewData["Title"] = "Eventos";
}


<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div class="event-schedule-area-two bg-color pad100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <div class="title-text">
                        <h2>Lista de eventos</h2>
                    </div>
                    <p>
                        Na lista abaixo você pode conferir todos os eventos.<br />
                        Também há a opção de filtrar e exibir somente eventos com data marcada ou aguardando confirmação.
                    </p>
                </div>
            </div>
            <!-- /.col end-->
        </div>
        <!-- row end-->




        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#home">Todos os Eventos</a></li>
            <li><a data-toggle="tab" href="#menu1">Eventos com data confirmada</a></li>
            <li><a data-toggle="tab" href="#menu2">Aguardando quantidade de doadores</a></li>
            <li><a data-toggle="tab" href="#menu3">Aguardando Local</a></li>
            <li><a data-toggle="tab" href="#menu4">Aguardando Entidade Coletora</a></li>
        </ul>



        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-center" scope="col">Data</th>
                            <th scope="col">Cidade</th>
                            <th scope="col">Entidade Coletora</th>
                            <th scope="col">Local</th>
                            <th scope="col">Endereço</th>
                            <th scope="col">Doadores</th>
                            <th class="text-center" scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dataEvento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cedenteLocal.cidade)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.entidadeColetora.nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cedenteLocal.nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cedenteLocal.endereco)
                                </td>
                                <td>
                                    TODO
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary" role="button">Inscrever-se</a>
                                </td>
                                <td>
                                    <a asp-action="DetalhesEvento" asp-route-id="@item.id" class="btn btn-info" role="button">Detalhes</a>
                                </td>
                            </tr>

                        }

                    </tbody>


                </table>

            </div>






            <div id="menu1" class="tab-pane fade">
                <h3>Menu 1</h3>
                <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
            </div>
            <div id="menu2" class="tab-pane fade">
                <h3>Menu 2</h3>
                <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
            </div>
            <div id="menu3" class="tab-pane fade">
                <h3>Menu 3</h3>
                <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
            </div>
            <div id="menu4" class="tab-pane fade">
                <h3>Menu 4</h3>
                <p>teste</p>
            </div>
        </div>
    </div>
</div>